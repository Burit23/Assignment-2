class Product:
    def __init__(self, name, quantity):
        self.name = name
        self.quantity = quantity

class OnlineShop:
    def __init__(self, name="Gadget World", url="www.gadgetworld.com"):
        self.name = name
        self.url = url
        self.__products = []  # Private attribute

    def add_product(self, name, quantity):
        product = Product(name, quantity)
        self.__products.append(product)
        print(f"Added {name} with quantity {quantity} to {self.name}.")

    def show_products(self):
        if not self.__products:
            print(f"No products in {self.name}.")
        else:
            print(f"Products in {self.name} ({self.url}):")
            for product in self.__products:
                print(f"- {product.name}: {product.quantity} units")

# ตัวอย่างการทดสอบ
my_shop = OnlineShop()
my_shop.add_product("Laptop", 15)
my_shop.add_product("Mouse", 58)
my_shop.show_products()
